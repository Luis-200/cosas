<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fondo"
        android:orientation="vertical"
        tools:context=".Registro">

    <ImageView
            android:layout_width="277dp"
            android:layout_height="177sp"
            android:src="@drawable/logo"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"/>
    <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Necesitamos algunos datos para comenzar con el proceso."
            android:textColor="@color/gris"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="30dp"/>
    <EditText
            android:id="@+id/txt_nombreGrupo"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="Nombre del grupo"
            android:textColorHint="@color/blanco"
            android:layout_gravity="center"
            android:background="@drawable/circular_edit"
            android:drawableLeft="@drawable/ic_lock_icon"
            android:drawablePadding="8dp"
            android:layout_marginTop="30dp"
    />
    <EditText
            android:id="@+id/txt_Correo"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="Correo electrónico"
            android:textColorHint="@color/blanco"
            android:layout_gravity="center"
            android:background="@drawable/circular_edit"
            android:drawableLeft="@drawable/ic_lock_icon"
            android:drawablePadding="8dp"
            android:layout_marginTop="30dp"
    />
    <EditText
            android:id="@+id/txt_contraseña"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="Contraseña"
            android:textColorHint="@color/blanco"
            android:layout_gravity="center"
            android:background="@drawable/circular_edit"
            android:drawableLeft="@drawable/ic_lock_icon"
            android:drawablePadding="8dp"
            android:layout_marginTop="30dp"
    />
    <Button
            android:id="@+id/btn_registrar"
            android:layout_width="208dp"
            android:layout_height="49dp"
            android:text="Registrar"
            android:textSize="20sp"
            android:textColor="@color/blanco"
            android:layout_gravity="center"
            android:background="@drawable/circ_btn"
            android:layout_marginTop="30dp"
    />
</LinearLayout>