<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/fondo"
        tools:context=".Inicio_sesion">

    <ImageView
            android:layout_width="277dp"
            android:layout_height="177sp"
            android:src="@drawable/logo"
            android:layout_gravity="center"
    android:layout_marginTop="35dp">
    </ImageView>

    <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Iniciar Sesión"
            android:textColor="@color/rosa"
            android:textSize="30sp"
            android:layout_gravity="center"
    android:layout_marginTop="30dp"/>

    <EditText
            android:id="@+id/txt_iniciar"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="Correo electrónico"
            android:textColorHint="@color/blanco"
            android:layout_gravity="center"
            android:background="@drawable/circular_edit"
            android:layout_marginTop="30dp"

    />
    <EditText
            android:id="@+id/txt_password"
            android:layout_width="294dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:hint="Contraseña"
            android:textColorHint="@color/blanco"
            android:background="@drawable/circular_edit"
            android:drawableLeft="@drawable/ic_lock_icon"
            android:drawablePadding="8dp"
            android:layout_marginTop="30dp"
    />

    <Button
            android:id="@+id/btn_iniciar"
            android:layout_width="208dp"
            android:layout_height="49dp"
            android:text="Iniciar"
            android:textSize="20sp"
            android:textColor="@color/blanco"
            android:layout_gravity="center"
            android:background="@drawable/circ_btn"
            android:layout_marginTop="30dp"

    />
    <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="¿Aún no haz registrado tu grupo musical? ¿Qué esperas?"
            android:textColor="@color/gris"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="30dp"/>

    <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Clic aquí para registrarte"
            android:textColor="@color/rosa"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="30dp"/>

</LinearLayout>